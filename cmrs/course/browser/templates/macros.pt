<fieldset metal:define-macro="type_facet">
    <legend>Course Types</legend>
    <div class="field"
         tal:define="course_type request/course_type | nothing">
         <div tal:repeat="vocab_item view/uniqueValuesForCourseType">
            <input tal:attributes="value vocab_item"
                   name="course_type"
                   type="checkbox"
                   />
            <label tal:content="vocab_item" />
        </div>
    </div>
</fieldset>

<fieldset metal:define-macro="subject_facet">
    <legend>Course Types</legend>
    <div class="field"
         tal:define="course_subject request/course_subject | nothing">
         <div tal:repeat="vocab_item view/uniqueValuesForCourseSubject">
            <input tal:attributes="value vocab_item"
                   name="course_subject"
                   type="checkbox"
                   />
            <label tal:content="vocab_item" />
        </div>
    </div>
</fieldset>

<fieldset metal:define-macro="availability_facet">
    <legend>Course Types</legend>
    <div class="field"
         tal:define="course_availability request/course_availability | nothing">
         <div tal:repeat="vocab_item view/uniqueValuesForCourseAvailability">
            <input tal:attributes="value vocab_item"
                   tal:condition="python:vocab_item != ''"
                   name="course_availability"
                   type="checkbox"
                   />
            <label tal:content="vocab_item" />
        </div>
    </div>
</fieldset>

<dl metal:define-macro="results_display">
    <div tal:repeat="course courses"
         tal:omit-tag="">
        <dt>
            <a tal:attributes="src course/absolute_url"
               tal:content="course/title" />
        </dt>
        <dd tal:content="course/description" />
    </div>
</dl>

<div metal:define-macro="submit_button">
    <div class="field">
        <div class="formControls">
            <input class="context"
                name="form.button.Send"
                type="submit"
                value="Search"
                />
        </div>
    </div>
</div>
